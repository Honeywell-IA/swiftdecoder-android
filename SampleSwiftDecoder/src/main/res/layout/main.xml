<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
	android:layout_gravity="left"
	android:layout_width="fill_parent"
	android:baselineAligned="true"
	android:orientation="vertical"
	android:id="@+id/main_layout"
	android:background="@drawable/gradient">

    <LinearLayout android:id="@+id/linearLayout2" android:layout_gravity="center" android:layout_height="fill_parent" android:orientation="vertical" android:layout_marginLeft="5dip" android:layout_width="fill_parent" android:layout_weight="1">

		<TextView android:text="Device Id: " android:id="@+id/textViewdeviceId" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#FFFFFF" android:maxLines="2" android:lines="2"></TextView>
		<ImageView
   		    android:id="@+id/imageViewDec"
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
   		    android:layout_gravity="center_vertical"
   		    android:layout_marginLeft="5dip"
   		    android:layout_marginTop="5dip"
   		    android:src="@drawable/noimage" >
		</ImageView>
   		<TextView android:text="Symbology: " android:id="@+id/textViewSymb" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#FFFFFF"></TextView>   	
   		<TextView android:text="Result: " android:id="@+id/textViewRes" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#FFFFFF"></TextView>
   		<TextView android:text="Length: " android:id="@+id/textViewLength" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#FFFFFF"></TextView>
   		<TextView android:text="Decode Time: " android:id="@+id/textViewDecTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#FFFFFF"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:gravity="top"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonDecode"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dip"
            android:text="Scan Activity"
            android:textSize="10sp" />

        <Button
            android:id="@+id/buttonDecodeLocal"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:text="Scan Component"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Plug-ins:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cbDefault"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.00"
            android:checked="false"
            android:text="Default Decode" />

        <CheckBox
            android:id="@+id/cbCustom"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0.00"
            android:text="Custom Plugin" />

    </LinearLayout>

</LinearLayout>