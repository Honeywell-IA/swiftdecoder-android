<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
	android:layout_gravity="left"
	android:layout_width="match_parent"
	android:baselineAligned="true"
	android:orientation="vertical"
	android:id="@+id/main_layout"
	android:background="@drawable/gradient">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:padding="6dp"
		android:layout_centerInParent="true"
		android:background="@drawable/edit_background"
		android:orientation="vertical">
		<TextView
			android:id="@+id/entitlement"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center_vertical"
			android:text="ENTITLEMENT ID"
			android:textSize="13sp"
			android:textColor="#000000" />
		<EditText
			android:id="@+id/editTextForEntitlement"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="2"
			android:hint="Enter the entitlement id"
			/>
		<Button
			android:id="@+id/buttonActivate"
			android:layout_width="match_parent"
			android:layout_height="35dp"
			android:layout_weight="2"
			android:text="Activate"
			android:gravity="center"
			android:layout_centerInParent="true"
			android:textSize="10sp" />
	</LinearLayout>
	<RelativeLayout
		android:id="@+id/linearLayout1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="2"
		>

		<Button
			android:id="@+id/buttonScan"
			android:layout_width="match_parent"
			android:layout_height="35dp"
			android:text="Scan"
			android:gravity="center"
            android:layout_centerInParent="true"
			android:textSize="10sp" />


	</RelativeLayout>

	<LinearLayout
		android:id="@+id/linearLayout2"
		android:layout_width="fill_parent"
		android:layout_height="match_parent"
		android:layout_gravity="center"
		android:layout_marginLeft="5dip"
		android:layout_marginTop="20dp"
		android:layout_weight="1"
		android:orientation="vertical">

		<TextView
			android:id="@+id/textViewdeviceId"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:lines="2"
			android:maxLines="2"
			android:text="Device Id: "
			android:textColor="#FFFFFF"></TextView>
		<TextView
			android:id="@+id/textViewsdk"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="SDK : "
			android:textColor="#FFFFFF"></TextView>
		<TextView
			android:id="@+id/textViewOCRSdk"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="SwiftOCR SDK : "
			android:textColor="#FFFFFF"></TextView>
		<TextView
			android:id="@+id/textViewDecoder"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Decoder : "
			android:textColor="#FFFFFF"></TextView>
	</LinearLayout>



</LinearLayout>